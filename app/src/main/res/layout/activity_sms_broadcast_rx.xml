<?xml version="1.0" encoding="utf-8"?>
<com.ejosy.cbeasplus.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rb_color="#0099CC"
    app:rb_duration="3000"
    app:rb_radius="32dp"
    app:rb_rippleAmount="6"
    app:rb_scale="6">

    <TextView
        android:id="@+id/txPhoneNo"
        android:layout_width="160dp"
        android:layout_height="77dp"
        android:layout_above="@+id/txaddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="61dp"
        android:text="@string/txPhoneNo" />

    <TextView
        android:id="@+id/txSentMsg"
        android:layout_width="185dp"
        android:layout_height="103dp"
        android:layout_above="@+id/btn_map"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="24dp"
        android:text="@string/txSentMsg" />

    <TextView
        android:id="@+id/txaddress"
        android:layout_width="168dp"
        android:layout_height="100dp"
        android:layout_above="@+id/txSentMsg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="146dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="40dp" />

</com.ejosy.cbeasplus.RippleBackground>